<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Netflix Project' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Include Netflix-like Navigation Bar -->
    <%- include('partials/_NavBar') %>
    
    <!-- Main Content Container -->
    <div class="container-fluid mt-4">
        <!-- Most Popular Content Section -->
        <section class="mb-5">
            <h2>ðŸ”¥ Most Popular</h2>
            <div class="content-slider-wrapper">
                <button class="slider-btn slider-btn-left" id="popular-left-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <div class="content-slider" id="popular-slider">
                    <div id="popular-content" class="content-row">
                        <div class="content-item loading">
                            <div class="spinner-border text-danger">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="slider-btn slider-btn-right" id="popular-right-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </section>

        <!-- Newest Movies Section -->
        <section class="mb-5">
            <h2>ðŸŽ¬ Latest Movies</h2>
            <div class="content-slider-wrapper">
                <button class="slider-btn slider-btn-left" id="movies-left-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <div class="content-slider" id="movies-slider">
                    <div id="newest-movies" class="content-row">
                        <div class="content-item loading">
                            <div class="spinner-border text-danger">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="slider-btn slider-btn-right" id="movies-right-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </section>

        <!-- Newest Series Section -->
        <section class="mb-5">
            <h2>ðŸ“º Latest Series</h2>
            <div class="content-slider-wrapper">
                <button class="slider-btn slider-btn-left" id="series-left-btn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <div class="content-slider" id="series-slider">
                    <div id="newest-series" class="content-row">
                        <div class="content-item loading">
                            <div class="spinner-border text-danger">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="slider-btn slider-btn-right" id="series-right-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </section>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Main Application JavaScript -->
    <script src="/app.js"></script>
</body>
</html>