<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Project - Manage Profiles</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/_ReverseNavbar') %>

    <div class="settings-container">
        <!-- Header -->
        <div class="settings-header">
            <h1 class="settings-title">Manage Profiles</h1>
            <div class="profile-count">
                You have <strong><span id="profile-count"><%= profiles ? profiles.length : 0 %></span></strong> of <strong>5</strong> profiles
            </div>
        </div>

        <!-- Profiles Grid -->
        <div class="profiles-management-grid" id="profiles-grid">
            <% if (profiles && profiles.length > 0) { %>
                <% profiles.forEach(profile => { %>
                    <div class="profile-card" data-profile-id="<%= profile._id %>">
                        <div class="profile-card-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <h3 class="profile-card-name"><%= profile.name %></h3>
                        <div class="profile-card-actions">
                            <button class="btn btn-sm btn-outline-light edit-profile-btn" 
                                    data-profile-id="<%= profile._id %>"
                                    data-profile-name="<%= profile.name %>">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-profile-btn" 
                                    data-profile-id="<%= profile._id %>"
                                    data-profile-name="<%= profile.name %>"
                                    <%= profiles.length <= 1 ? 'disabled' : '' %>>
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } %>
            
            <!-- Add New Profile Card -->
            <div class="profile-card add-profile-card" id="add-profile-card" 
                 <%= (profiles && profiles.length >= 5) ? 'style="display:none;"' : '' %>>
                <i class="fas fa-plus-circle"></i>
                <p class="add-profile-text">Add Profile</p>
            </div>
        </div>
    </div>

    <!-- Create/Edit Profile Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="profileModalTitle">Add Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="profileForm">
                        <input type="hidden" id="profileId" name="profileId">
                        <div class="mb-3">
                            <label for="profileName" class="form-label">Profile Name</label>
                            <input type="text" class="form-control" id="profileName" name="profileName" 
                                   placeholder="Enter profile name" required maxlength="50">
                            <div class="invalid-feedback" id="nameError"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="saveProfileBtn">Save Profile</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the profile "<strong id="deleteProfileName"></strong>"?</p>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                    <input type="hidden" id="deleteProfileId">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Profile</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Settings JavaScript -->
    <script src="/settings.js"></script>
</body>
</html>

